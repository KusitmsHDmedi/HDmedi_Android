<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.Result1Fragment">
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="문항별 비교"
            android:layout_marginTop="57dp"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="144dp"
            android:layout_height="40dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            android:layout_marginTop="37dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검사 질문"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/parentAnswer"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="#00C67B"
            app:strokeColor="#C4CAD4"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toEndOf="@+id/materialCardView"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_parent"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/answerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답변"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:textColor="#FFFFFF"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/teacherAnswer"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="#FFE459"
            app:strokeColor="#C4CAD4"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toEndOf="@+id/parentAnswer"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_parent"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답변"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:textColor="@color/black"/>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"
            app:layout_constraintBottom_toTopOf="@id/btnNext"
            tools:listitem="@layout/result_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_activated"
            android:text="확인"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>